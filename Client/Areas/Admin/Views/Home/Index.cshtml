                $('#bindemp').empty();
                $.each(data, function (key, val) {
                    var row = "<tr><td>" + val.Name + "</td> <td>" + val.StuffNo + "</td> <td>" + val.Position + "</td> <td>" + val.Email + "</td> <td>" + val.Email + "</td> <td>" + "</td></tr>";
                    $(row).append($('#bindemp'))

                });
            });







        });




</script>